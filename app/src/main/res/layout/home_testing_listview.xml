<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="7dp"
              android:background="@drawable/bg_selector"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style ="@style/HT_FontRoomName"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:id="@+id/room_name_textView"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style ="@style/HT_FontSpeedStrengthNow"
                        android:text="@string/ht_now_static"
                        android:id="@+id/rssi_now_textView"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ProgressBar
                            android:id="@+id/ht_quality_progressbar_now"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            android:paddingLeft="7dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:progressDrawable="@drawable/ns_progress_bar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style ="@style/NT_FontNetworkStatus"
                            android:text=""
                            android:id="@+id/ht_strength_percent_progressbar_now_textView"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style ="@style/HT_FontSpeedStrengthLast"
                        android:text="@string/ht_last_static"
                        android:id="@+id/rssi_last_textView"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ProgressBar
                            android:id="@+id/ht_quality_progressbar_last"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            android:paddingLeft="7dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:progressDrawable="@drawable/ns_progress_bar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style ="@style/NT_FontNetworkStatus"
                            android:text=""
                            android:id="@+id/ht_strength_percent_progressbar_last_textView"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                    >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style ="@style/HT_FontSpeedStrengthNow"
                        android:text="@string/ht_now_static"
                        android:id="@+id/link_speed_now_textView"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ProgressBar
                            android:id="@+id/ht_speed_progressbar_now"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            android:paddingLeft="7dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:progressDrawable="@drawable/ns_progress_bar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style ="@style/NT_FontNetworkStatus"
                            android:text=""
                            android:id="@+id/ht_speed_percent_progressbar_now_textView3"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style ="@style/HT_FontSpeedStrengthLast"
                        android:text="@string/ht_last_static"
                        android:id="@+id/link_speed_last_textView"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ProgressBar
                            android:id="@+id/ht_speed_progressbar_last"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            android:paddingLeft="7dp"
                            android:paddingRight="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:progressDrawable="@drawable/ns_progress_bar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style ="@style/NT_FontNetworkStatus"
                            android:text=""
                            android:id="@+id/ht_speed_percent_progressbar_last_textView"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>